<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="molipa_tmlshipping_outbox" resource="default" engine="innodb" comment="TmlShipping Outbox">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="event_id" length="64" nullable="false" comment="Event Id"/>
        <column xsi:type="varchar" name="event_type" length="32" nullable="false" comment="Event Type"/>
        <column xsi:type="int" name="shipment_id" unsigned="true" nullable="false" comment="Shipment Entity Id"/>
        <column xsi:type="int" name="website_id" unsigned="true" nullable="false" comment="Website Id"/>

        <column xsi:type="text" name="payload_json" nullable="false" comment="Payload JSON"/>

        <column xsi:type="varchar" name="status" length="16" nullable="false" default="pending" comment="pending|sent|failed"/>
        <column xsi:type="smallint" name="attempts" unsigned="true" nullable="false" default="0" comment="Attempts"/>
        <column xsi:type="text" name="last_error" nullable="true" comment="Last Error"/>

        <column xsi:type="timestamp" name="next_attempt_at" nullable="true" comment="Next Attempt At"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="unique" referenceId="TML_OUTBOX_UNQ_SHIPMENT">
            <column name="event_type"/>
            <column name="shipment_id"/>
            <column name="website_id"/>
        </constraint>

        <index referenceId="TML_OUTBOX_STATUS_NEXT" indexType="btree">
            <column name="status"/>
            <column name="next_attempt_at"/>
        </index>
    </table>

</schema>
